<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/menuImage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/menu_logo"
            android:layout_marginBottom="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="bottom"
            android:paddingBottom="25dp"
            android:text="Mensa TÃ¼bingen"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="bottom|left"
            android:text="Entwickler: Steffen Lindner"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true"
            android:textColor="#FFF"
            android:textSize="14dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/spacer"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@color/green"
            android:layout_below="@+id/menuImage"
            android:layout_gravity="top">

        </LinearLayout>


        <Button
            android:id="@+id/showMorgenstelle"
            style="@style/menuBTN"
            android:text="@string/morgenstelle"
            android:drawableRight="@drawable/arrowup"/>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/morgenstelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <Button
                android:id="@+id/monday"
                style="@style/menuItem"
                android:text="Montag" />

            <Button
                android:id="@+id/tuesday"
                style="@style/menuItem"
                android:text="Dienstag" />

            <Button
                android:id="@+id/wednesday"
                style="@style/menuItem"
                android:text="Mittwoch" />

            <Button
                android:id="@+id/thursday"
                style="@style/menuItem"
                android:text="Donnerstag" />

            <Button
                android:id="@+id/friday"
                style="@style/menuItem"
                android:text="Freitag" />

        </LinearLayout>


        <Button
            android:id="@+id/willhelmstr"
            style="@style/menuBTN"
            android:text="@string/willhelm" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/willhelmView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/mondayW"
                style="@style/menuItem"
                android:text="Montag" />

            <Button
                android:id="@+id/tuesdayW"
                style="@style/menuItem"
                android:text="Dienstag" />

            <Button
                android:id="@+id/wednesdayW"
                style="@style/menuItem"
                android:text="Mittwoch" />

            <Button
                android:id="@+id/thursdayW"
                style="@style/menuItem"
                android:text="Donnerstag" />

            <Button
                android:id="@+id/fridayW"
                style="@style/menuItem"
                android:text="Freitag" />


        </LinearLayout>

        <Button
            android:id="@+id/settings"
            style="@style/normalbtn"
            android:text="@string/settings"
            android:drawableLeft="@drawable/gear39"/>

        <Button
            android:id="@+id/about"
            style="@style/normalbtn"
            android:text="@string/about" />

    </LinearLayout>

</ScrollView>